<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- СВЕТЛАЯ ТЕМА -->
    <!-- СВЕТЛАЯ -->
    <style name="Theme_SmartParkingClient_Light" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorSecondary">@color/colorSecondary</item>

        <!-- Вот эти два атрибута мы использовали в разметке -->
        <item name="colorPrimaryDark">@color/light_background</item>
        <item name="colorSurface">@color/light_surface</item>

        <!-- Цвет иконок/текста в toolbar и т.п. -->
        <item name="android:textColorPrimary">#222222</item>
    </style>

    <!-- ТЁМНАЯ -->
    <style name="Theme_SmartParkingClient_Dark" parent="Theme_SmartParkingClient_Dark">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorSecondary">@color/colorSecondary</item>

        <!-- Тёмно-серый фон и чуть светлее для карточек -->
        <item name="colorPrimaryDark">#121212</item>   <!-- почти чёрный, но не в ноль -->
        <item name="colorSurface">#1E1E1E</item>      <!-- тёмно-серый для карточек/панели -->

        <!-- Текст/иконки на тёмном -->
        <item name="android:textColorPrimary">#FFFFFF</item>
    </style>

</resources>
