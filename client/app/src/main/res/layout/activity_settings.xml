<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Прокручиваемая часть с настройками -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Тема -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Тема"
                android:textSize="18sp"
                android:layout_marginBottom="8dp" />

            <RadioGroup
                android:id="@+id/rgTheme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp">

                <RadioButton
                    android:id="@+id/rbThemeLight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Светлая" />

                <RadioButton
                    android:id="@+id/rbThemeDark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Тёмная" />

                <RadioButton
                    android:id="@+id/rbThemeNeutral"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Нейтральная" />
            </RadioGroup>

            <!-- Язык -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Язык"
                android:textSize="18sp"
                android:layout_marginBottom="8dp" />

            <RadioGroup
                android:id="@+id/rgLang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp">

                <RadioButton
                    android:id="@+id/rbLangRu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Русский" />

                <RadioButton
                    android:id="@+id/rbLangEn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="English" />
            </RadioGroup>

            <!-- Уведомления -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Уведомления при заезде/выезде"
                android:textSize="18sp"
                android:layout_marginBottom="8dp" />

            <Switch
                android:id="@+id/switchNotify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Включить уведомления"
                android:layout_marginBottom="24dp" />

            <!-- Кнопка "Применить" -->
            <Button
                android:id="@+id/btnApply"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Применить" />

        </LinearLayout>
    </ScrollView>

    <!-- Нижняя навигация -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:menu="@menu/bottom_nav_menu" />

</LinearLayout>
