<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Тема -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Тема"
            android:textSize="18sp"
            android:layout_marginBottom="8dp" />

        <RadioGroup
            android:id="@+id/rgTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <RadioButton
                android:id="@+id/rbThemeLight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Светлая" />

            <RadioButton
                android:id="@+id/rbThemeDark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Тёмная" />

            <RadioButton
                android:id="@+id/rbThemeNeutral"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Нейтральная" />
        </RadioGroup>

        <!-- Язык -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Язык"
            android:textSize="18sp"
            android:layout_marginBottom="8dp" />

        <RadioGroup
            android:id="@+id/rgLang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <RadioButton
                android:id="@+id/rbLangRu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Русский" />

            <RadioButton
                android:id="@+id/rbLangEn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="English" />
        </RadioGroup>

        <!-- Уведомления -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Уведомления при заезде/выезде"
            android:textSize="18sp"
            android:layout_marginBottom="8dp" />

        <Switch

            android:id="@+id/switchNotify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/settings_enable_notifications" />

        <Button
            android:id="@+id/btnApply"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Применить" />
    </LinearLayout>
</ScrollView>
